#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage() {
    echo "usage: $(basename $0) track"
    [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; exit
}

[[ $1 == "-h" ]] || [[ $1 == "--help" ]] && usage "$@"

pid="$(itunes pid)" || exit
[[ -z "$pid" ]] && exit 0

osascript "${BASH_SOURCE[0]}".applescript "$@"

