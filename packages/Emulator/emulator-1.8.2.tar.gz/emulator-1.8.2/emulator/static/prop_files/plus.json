{
  "type": "object",
  "properties": {
    "type": {
      "description": "Type of the message.",
      "type": "string",
      "default":"evt.thing.inclusion_report"
    },
    "serv": {
      "description": "Service name",
      "type": "string"
    },
    "val_type": {
      "description": "Value type",
      "type": "string"
    },
    "val": {
      "type": "object",
      "properties": {
        "product_hash": {
          "description": "Product unique identifier.Normally the hash is build using manufacturer id + produc id + versions",
          "type": "string"
        },
        "comm_tech": {
          "description": "Communication technology. For instance zw for zwave",
          "type": "string"
        },
        "manufacturer_id": {
          "description": "Manufacturer id",
          "type": "string"
        },
        "product_id": {
          "type": "string"
        },
        "address": {
          "description": "Technology specific address",
          "type": "string"
        },
        "device_id": {
          "description": "Device id , normally serial number. Don't mix with product id and address",
          "type": "string"
        },
        "sw_ver": {
          "description": "Software version",
          "type": "string"
        },
        "hw_ver": {
          "description": "Hardware version",
          "type": "string"
        },
        "power_source": {
          "description": "Power source . ac , dc , battery",
          "enum": [
            "ac","dc","bat"
          ],
          "type": "string"
        },
        "wakeup_interval": {
          "description": "Every battery powered thing should have wakeup interval",
          "type": "integer"
        },
        "tech_specific_props": {
          "type": "object",
          "description": "Technology specific properties.",
          "properties": {
            "tech_prefix_propery_name": {
              "type": "string"
            }
          },
          "required": []
        },
        "prop_set": {
          "type": "object",
          "description": "Shared propery set. Multiple services may share the same set of properties. See example.",
          "properties": {
            "nif_ch1": {
              "type": "object",
              "properties": {
                "zw_generic_dev_class": {
                  "type": "string"
                }
              },
              "required": []
            }
          },
          "required": []
        },
        "services": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Service descriptor",
            "properties": {
              "name": {
                "type": "string"
              },
              "address": {
                "type": "string"
              },
              "interfaces": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "intf_type": {
                      "description": "Defines direction of a message flow",
                      "enum": [
                        "in","out"
                      ],
                      "type": "string"
                    },
                    "msg_type": {
                      "description": "Name of message type. It points to messache schema",
                      "type": "string"

                    },
                    "props": {
                      "type": "object",
                      "properties": {}
                    }
                  },
                  "required": [
                    "intf_type",
                    "msg_type",
                    "props"
                  ]
                }
              },
              "prop_set_ref": {
                "description": "Reference to shared propery set",
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "groups": {
                "type": "array",
                "description": "Groups are used to link multiple services in one logical group",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "name",
              "address",
              "interfaces",
              "prop_set_ref",
              "location",
              "groups"
            ]
          }
        }
      },
      "required": [
        "product_hash",
        "comm_tech",
        "manufacturer_id",
        "product_id",
        "address",
        "device_id",
        "sw_ver",
        "hw_ver",
        "power_source",
        "wakeup_interval",
        "tech_specific_props",
        "prop_set",
        "services"
      ]
    },
    "ctime": {
      "type": "string"
    },
    "ver": {
      "type": "string"
    },
    "uid": {
      "type": "string"
    }
  },
  "required": [
    "type",
    "serv",
    "val_type",
    "val",
    "ctime",
    "ver",
    "uid"
  ]
}
