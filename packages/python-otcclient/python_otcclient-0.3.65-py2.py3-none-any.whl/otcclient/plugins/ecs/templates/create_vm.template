{
    "server": {
        "availability_zone": "{{AZ}}",
        "name": "{{INSTANCE_NAME}}",
        "imageRef": "{{IMAGE_ID}}",        
        "root_volume": {
            {% if VOLUME_TYPE %}        
                "volumetype": "{{VOLUME_TYPE}}"
            {% else %}            
                "volumetype": "SATA"
            {% endif %}            
            {% if VOLUME_SIZE %}                        
            ,"size": "{{VOLUME_SIZE}}"
            {% endif %}                        
        },

        {% if DATA_VOLUMES %}
        "data_volumes": [
           {{DATA_VOLUMES}}
        ],
        {% endif %}

        {% if USER_DATA %}
        "user_data": "{{USER_DATA}}",
        {% endif %}
        "flavorRef": "{{INSTANCE_TYPE}}",
        {{PERSONALIZATION}}
        "vpcid": "{{VPCID}}",
        "security_groups": [{
            "id": "{{SECUGROUP}}"
        }],
        "nics": [
        {% set subnetlist = SUBNETID.split(',') %}
        {% for SUBNET in subnetlist %}
        {
            "subnet_id": "{{SUBNET}}"
        }
        {% if not loop.last %}
        ,
        {% endif %}
        {% endfor %}
        ],        
        {% if CREATE_ECS_WITH_PUBLIC_IP %}
            "publicip": { "eip": { "iptype": "5_bgp", "bandwidth": { "size": 5, "sharetype": "PER", "chargemode": "traffic" } } },
        {% endif %}                
        {% if KEYNAME %}
        "key_name": "{{KEYNAME}}",
        {% endif %}
        {% if ADMINPASS %}
        "adminPass": "{{ADMINPASS}}",
        {% endif %}
        "count": "{{NUMCOUNT}}",
        "},": {
            "__vnc_keymap": "en"
        }
    }
}
